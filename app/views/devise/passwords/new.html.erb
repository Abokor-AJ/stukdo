

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: "form-signin"}) do |f| %>
<h2 class="">Password Forgotten?</h2><br>

  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email address" %>

    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %><br>

<%= render "devise/shared/links" %>
<% end %>


